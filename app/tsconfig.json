{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "App.tsx"],
  "exclude": ["android", "ios", "compiled", "node_modules"],
  "extends": "expo/tsconfig.base"
}
